{% extends 'layout.html.twig' %}
{%block title %}{{ parent() }} - Article{% endblock %}
{% block banner %} <div class="banner2"></div>{% endblock %}
{% block content %}
<section class="product">
    <!-- Product -->
    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
                <!--Search bar-->
            <div class="row d-flex justify-content-center bd-highlight mb-3  search_product_bar">
                <nav class="m-b-100 search_bar col-md-8 col-lg-5  navbar navbar-light">
                    <form class="search_bar form-inline" method="get"  action="">
                        <input class="search_bar form-control mr-sm-2" type="search" name="search" placeholder="🔍 " aria-label="Search">
                        <input type="hidden" name="category" value="DVD">
                    </form>
                </nav>
            </div>
        </div>
    </div>
    <!-- Block2 -->
    <div class="container">
        {% if nbPages is defined and nbPages > 1 %}
            <div class="row justify-content-end paging">
                {% if currentPage != 1 %}
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ 1 }}" class="btn btn-shinjuku"><<</a>
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ currentPage-1 }}" class="btn btn-shinjuku"><</a>
                {% endif %}
                {% for i in 1..nbPages %}
                    {% if currentPage != i %}
                        <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ i }}" class="btn btn-shinjuku">{{ i }}</a>
                    {% else %}
                        <button class="btn btn-shinjuku currentPageButton">{{ i }}</button>
                    {% endif %}
                {% endfor %}
                {% if currentPage < nbPages %}
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ currentPage+1 }}" class="btn btn-shinjuku">></a>
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ nbPages }}" class="btn btn-shinjuku">>></a>
                {% endif %}
            </div>
        {% endif %}
        <div class="row ">
            <div class="col-lg-12 bold cl13 fs-30 d-flex justify-content-center">{{ error.category }} {{ error.toomuch }}</div>
            {% for article in article %}
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 m-b-35 block-article">
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="{{ article.picture }}" alt="IMG-PRODUCT" class="image-article" >
                        </div>
                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="#" class=" cl10 hov-cl1 trans-04  p-b-6 bold">
                                    {{ article.name }}
                                </a>
                                <span class=" ">
				Prix:{{ article.price }}€
				</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if nbPages is defined and nbPages > 1 %}
            <div class="row justify-content-end paging">
                {% if currentPage != 1 %}
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ 1 }}" class="btn btn-shinjuku"><<</a>
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ currentPage-1 }}" class="btn btn-shinjuku"><</a>
                {% endif %}
                {% for i in 1..nbPages %}
                    {% if currentPage != i %}
                        <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ i }}" class="btn btn-shinjuku">{{ i }}</a>
                    {% else %}
                        <button class="btn btn-shinjuku currentPageButton">{{ i }}</button>
                    {% endif %}
                {% endfor %}
                {% if currentPage < nbPages %}
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ currentPage+1 }}" class="btn btn-shinjuku">></a>
                    <a href="?{{ get.search ? 'search=' ~ get.search ~ '&'}}{{ get.category ? 'category=' ~ get.category ~ '&'}}currentPage={{ nbPages }}" class="btn btn-shinjuku">>></a>
                {% endif %}
            </div>
        {% endif %}
    </div>
    {% endblock %}
